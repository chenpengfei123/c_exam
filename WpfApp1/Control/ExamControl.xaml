<UserControl x:Class="WpfApp1.Control.ExamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Control"
             mc:Ignorable="d" 
             d:DesignHeight="400" Width="600">
    <Grid >
        <Button Name="StartExam" Content="开始考试"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,310,0,0" Click="StartExam_Click" FontSize="16" Width="93"/>
        <ComboBox HorizontalAlignment="Left" x:Name="ExamSubject" VerticalAlignment="Top" FontSize="18" Width="250" Height="27" Margin="229,73,0,0" SelectionChanged="ExamSubjectChange_Click" RenderTransformOrigin="0.598,0.64"/>
        <Label Content="考试   名称：" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="120,70,0,0"/>
        <TextBlock  Name="ExamInfo" HorizontalAlignment="Left" Margin="120,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="184" Width="418" FontSize="16"/>
        <Button x:Name="Refresh" Content="刷新"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="494,73,0,0" Click="Refresh_Click" FontSize="18" Width="44"/>

    </Grid>
</UserControl>
