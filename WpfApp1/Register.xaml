        <PasswordBox Name="passwordAgain" HorizontalAlignment="Left" Margin="150,167,0,0" VerticalAlignment="Top" Width="119"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="172,202,0,0" VerticalAlignment="Top" Width="75" Click="Sure_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="47,202,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="请输入学号：" HorizontalAlignment="Left" Margin="39,68,0,0" VerticalAlignment="Top" Width="106"/>
        <Label Content="请输入密码：" HorizontalAlignment="Left" Margin="39,112,0,0" VerticalAlignment="Top" Width="106"/>
        <Label Content="请再次输入密码：" HorizontalAlignment="Left" Margin="39,159,0,0" VerticalAlignment="Top"/>




    </Grid>
</Window>
