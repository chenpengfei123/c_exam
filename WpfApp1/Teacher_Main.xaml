<Window x:Class="WpfApp1.Teacher_Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="免监考C语言考试晋级系统-教师端" Height="625" Width="925" Icon="logo.png" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Button Content="修改密码" HorizontalAlignment="Right"  Margin="0,29,151.4,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.024,0.292" Click="ChangePassword_Click"/>
            <Button Content="退出系统" HorizontalAlignment="Right" Margin="0,29,33.4,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.672,-0.135" Click="Exit_Click"/>
            <Image HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="379" Source="logo_school.png"/>
        </Grid>

        <Grid Grid.Row="1">


            <Label Name="welecome" Content="欢迎你，老师" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Height="26" Width="120"/>
            <TabControl HorizontalAlignment="Left"   VerticalAlignment="Top" Margin="221,23,0,-0.2" Height="502" Width="687" >
                <TabItem Header="题库管理">
                    <Grid >
                        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="367" RenderTransformOrigin="1.541,1.002" Margin="-2,4,0,0"/>
                        <Button Content="管理题库" Margin="210,29,337.6,404.4" Click="StartAnswer_Click" FontSize="18"/>
                        <Label Content="第一章" HorizontalAlignment="Left" Margin="24,29,0,0" VerticalAlignment="Top" FontSize="18" Height="41" Width="80"/>
                    </Grid>
                </TabItem>
                <TabItem Header="添加考试">
                    <Grid>
                        <Button Content="新增试卷" HorizontalAlignment="Left" Margin="48,39,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.024,0.292"/>
                    </Grid>
                </TabItem>

                <TabItem Header="查看成绩">
                    <Grid >
                        <DataGrid Name="getscores" HorizontalAlignment="Left" VerticalAlignment="Top" Width="575" Margin="0,76,0,0"/>
                        <Button Content="刷新" HorizontalAlignment="Left" Margin="596,76,0,0" VerticalAlignment="Top" Width="75" Click="RefreshScore_Click"/>
                        <Button Content="查看答题详情" Margin="25,30,546.8,419.4" Click="AnswerManager_Click"/>

                    </Grid>

                </TabItem>

                <TabItem Header="用户管理">
                    <Grid >
                        <DataGrid Name="stu_manager" MaxHeight="150" HorizontalAlignment="Left" VerticalAlignment="Top" Width="520" Margin="8,60,0,0" AutoGenerateColumns="True" FontSize="16"  >
                        </DataGrid>

                        <Button Content="刷新" Margin="564,60,27.8,387.4" Click="RefreshStudent_Click" />
                        <Label Content="查看用户照片" HorizontalAlignment="Left" Margin="31,219,0,0" VerticalAlignment="Top"/>
                        <TextBox Name="user_picture" HorizontalAlignment="Left" Height="33" Margin="138,295,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" FontSize="18"/>
                        <Button Content="确定" HorizontalAlignment="Left" Margin="138,394,0,0" VerticalAlignment="Top" Width="75" Click="stu_delete"/>
                        <Label Content="学号：" HorizontalAlignment="Left" Margin="55,295,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.093,0.032"/>
                        <Label Content="查看用户" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" Width="65"/>
                        <Image Name="image2" HorizontalAlignment="Left" Height="225" Margin="414,219,0,0" VerticalAlignment="Top" Width="224" Source="touxiang.jpg"/>

                    </Grid>

                </TabItem>


            </TabControl>
            <Image Name="image1" HorizontalAlignment="Left" Height="108" Margin="32,57,0,0" VerticalAlignment="Top" Width="163"/>
        </Grid>
    </Grid>
</Window>
